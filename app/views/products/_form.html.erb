<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: @title %>
  </div>

  <div class="field">
    <%= form.label :alias %>
    <%= form.text_field :alias %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :weight_unit_id %>
    <%= form.collection_select :weight_unit_id, WeightUnit.all, :id, :unit, prompt: true%>
  </div>

  <div class="field">
    <%= form.label :volume %>
    <%= form.text_field :volume %>
  </div>

  <div class="field">
    <%= form.label :volume_unit_id %>
    <%= form.collection_select :volume_unit_id, VolumeUnit.all, :id, :unit, prompt: true%>
  </div>

  <div class="field">
    <%= fields_for 'product[brand_attributes]' do |b| %>
      <%= b.label :brand %>
      <%= b.text_field :name, list: 'brands', value:  @product.brand ? @product.brand.name : '' %>
        <datalist id='brands'>
          <% Brand.all.each do |brand| %>
            <option value="<%= brand.name %>">
          <% end %>
        </datalist>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[category_attributes]' do |cat| %>
      <%= cat.label :category %>
      <%= cat.text_field :name, list: 'categories', value: @product.category ? @product.category.name : '' %>
        <datalist id='categories'>
          <% Category.all.each do |category| %>
            <option value="<%= category.name %>">
          <% end %>
        </datalist>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[upc_attributes]' do |upc| %>
      <%= upc.label :upc %>
      <%= upc.text_field :code , value: @upc %>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[plu_attributes]' do |plu| %>
      <%= plu.label :plu %>
      <%= plu.text_field :code , value: @plu  %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
