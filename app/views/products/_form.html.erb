<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: 'label'%>
    <%= form.text_field :title, value: @title, class: 'input'%>
  </div>

  <div class="field">
    <%= form.label :alias, class: 'label' %>
    <%= form.text_field :alias, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :description, class: 'label' %>
    <%= form.text_field :description, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :weight, class: 'label' %>
    <%= form.text_field :weight, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :weight_unit_id, class: 'label' %>
    <%= form.collection_select :weight_unit_id, WeightUnit.all, :id, :unit, { prompt: true },{ class: 'select' }%>
  </div>

  <div class="field">
    <%= form.label :volume, class: 'label' %>
    <%= form.text_field :volume, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :volume_unit_id, class: 'label' %>
    <%= form.collection_select :volume_unit_id, VolumeUnit.all, :id, :unit, { prompt: true }, { class: 'select' }%>
  </div>

  <div class="field">
    <%= fields_for 'product[brand_attributes]' do |b| %>
      <%= b.label :brand, class: 'label' %>
      <%= b.text_field :name, list: 'brands', value:  @product.brand ? @product.brand.name : '', class: 'input', autocomplete: 'false' %>
        <datalist id='brands'>
          <% Brand.all.each do |brand| %>
            <option value="<%= brand.name %>">
          <% end %>
        </datalist>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[category_attributes]' do |cat| %>
      <%= cat.label :category, class: 'label' %>
      <%= cat.text_field :name, list: 'categories', value: @product.category ? @product.category.name : '', class: 'input', autocomplete: 'false' %>
        <datalist id='categories'>
          <% Category.all.each do |category| %>
            <option value="<%= category.name %>">
          <% end %>
        </datalist>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[upc_attributes]' do |upc| %>
      <%= upc.label :upc, class: 'label' %>
      <%= upc.text_field :code , value: @upc, class: 'input' %>
    <% end %>
  </div>

  <div class="field">
    <%= fields_for 'product[plu_attributes]' do |plu| %>
      <%= plu.label :plu, class: 'label' %>
      <%= plu.text_field :code , value: @plu, class: 'input'  %>
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class: 'button is-primary' %>
  </div>
<% end %>
