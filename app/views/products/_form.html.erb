<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :alias %>
    <%= form.text_field :alias %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>

  <div class="field">
    <%= form.label :weight_unit_id %>
    <%= form.collection_select :weight_unit_id, WeightUnit.all, :id, :unit, prompt: true%>
  </div>

  <div class="field">
    <%= form.label :volume %>
    <%= form.text_field :volume %>
  </div>

  <div class="field">
    <%= form.label :volume_unit_id %>
    <%= form.collection_select :volume_unit_id, VolumeUnit.all, :id, :unit, prompt: true%>
  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%# Add a -1 value for javascript signaling for additional field %>
    <%= form.select :brand_id, Brand.all.order(:name).collect { |b| [b.name, b.id] } + [['Add brand', -1]], prompt: true %>
  </div>

  <div class="field">
    <%= form.label 'New Brand' %>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.text_field :category_id %>
  </div>

  <div class="field">
    <%= form.label :upc_id %>
    <%= form.text_field :upc_id %>
  </div>

  <div class="field">
    <%= form.label :plu_id %>
    <%= form.text_field :plu_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
