<section class="section">
  <div class="container">
    <div class="<%= 'notification is-info' if notice %>">
      <p id="notice"><%= notice %></p>
    </div>
  </div>
  <div class="container">
    <div class="columns is-desktop">
      <div class="column ">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              Product
            </p>
          </header>
          <div class="card-content">
            <p>
              <strong>Title:</strong>
              <%= @product.title %>
            </p>
            <p>
              <strong>Alias:</strong>
              <%= @product.alias %>
            </p>

            <p>
              <strong>Description:</strong>
              <%= @product.description %>
            </p>

            <p>
              <strong>Weight:</strong>
              <%= @product.weight %>
            </p>

            <p>
              <strong>Weight unit:</strong>
              <%= @product.weight ? @product.weight_unit.unit : nil %>
            </p>

            <p>
              <strong>Volume:</strong>
              <%= @product.volume %>
            </p>

            <p>
              <strong>Volume unit:</strong>
              <%= @product.volume ? @product.volume_unit.unit : nil %>
            </p>

            <p>
              <strong>Brand:</strong>
              <%= @product.brand.name %>
            </p>

            <p>
              <strong>Category:</strong>
              <%= @product.category.name %>
            </p>

            <p>
              <strong>Upc:</strong>
              <%= @product.upc_id ? @product.upc.code : nil %>
            </p>

            <p>
              <strong>Plu:</strong>
              <%= @product.plu_id ? @product.plu.code : nil%>
            </p>
          </div>
          <div class="card-footer">
            <%= link_to 'Edit', edit_product_path(@product), class: 'button card-footer-item' %>
            <%= link_to 'View All', products_path, class: "button card-footer-item" %>
          </div>
        </div>
      </div>
      <div class="column ">
        <div class="card">
          <header class="card-header">
            <p class="card-header-title">
              Prices
            </p>
          </header>
          <div class="card-content">
            <div class="content">
              <%= link_to 'Add Price', new_price_path(product_id: @product.id), class: 'button is-primary is-fullwidth' %>
            </div>
            <div class="content">
              <%# Product Prices List %>
              <table class="table">
                <thead>
                  <tr>
                    <th>Price</th>
                    <th>Store</th>
                    <th colspan="2"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @product.prices.limit(10).order(created_at: :desc).each do |price| %>
                    <tr>
                      <td><%= "$#{price.price}" %></td>
                      <td><%= price.store.name %></td>
                      <td>
                        <%= link_to edit_price_path(price) do %>
                          <%= button_tag 'Edit', type: 'button', class: 'button is-small'%>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to price, method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <%= button_tag 'Delete', type: 'button', class: 'button is-small'%>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      
      </div>
    </div>
  </div>
</section>